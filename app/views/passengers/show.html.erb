<h1><%= @passenger.name %>'s Page</h1>

<section class = "flights">
  <ul>
    <% @passenger.flights.each do |flight| %>
      <li>Flight <%= link_to flight.number, "/flights/#{flight.id}" %></li>
    <% end %>
  </ul>
</section>

<% if flash[:errors] %>
  <% flash.each do |key, message| %>
    <%= message %>
  <% end %>
<% end %>

<section class = "add_flight_form">
  <h3>Add Flight for <%= @passenger.name %></h3>
  <%= form_tag "/passenger_flights?passenger_id=#{@passenger.id}" do %>
    <%= label_tag :number %>
    <%= number_field_tag :number %>

    <%= submit_tag 'Submit' %>
  <% end %>
</section>
